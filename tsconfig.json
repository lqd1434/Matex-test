{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": ["dom", "es2017","ESNext"],
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "release/build",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src","electron","vite.config.ts"],
  "exclude": ["release"]
}
