{
  "productName": "Matex",
  "appId": "org.Matex.com",
  "asar": true,
  "directories": {
    "app": "release/",
    "buildResources": "assets",
    "output": "release/app"
  },
  "extraResources": [
    "./assets/**"
  ],
  "files": [
    "release/build",
    "package.json"
  ],
  "mac": {
    "icon": "./assets/icon/icon.png",
    "hardenedRuntime": true,
    "extraResources": {
      "from": "./release/build/render",
      "to": "./render"
    }
  },
  "win": {
    "icon": "./assets/icon/icon.ico",
    "extraResources": {
      "from": "./release/build/render",
      "to": "./render"
    },
    "target": [
      "nsis",
      "zip"
    ]
  },
  "nsis": {
    "oneClick": false,
    "guid": "matex",
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "./assets/icon/icon.ico",
    "uninstallerIcon": "./assets/icon/icon.ico",
    "installerHeaderIcon": "./assets/icon/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "matex"
  },
  "publish": {
    "provider": "github",
    "repo": "Matex"
  }
}
